<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center;">Edit <%= campground.name %></h1>
    <div style="max-width:350px;margin:25px auto;">
        <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="campground[name]" placeholder="name" value="<%=campground.name %>">
            </div>
            <div class="form-group">
                <input type="number" class="form-control" min="0.01" step="0.01" name="campground[price]" placeholder="price" value="<%= campground.price %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[image]" placeholder="image url" value="<%=campground.image %>">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[description]" placeholder="description" value="<%=campground.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-default btn-lg btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds/<%=campground._id%>">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>