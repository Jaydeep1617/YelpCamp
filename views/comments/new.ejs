<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center;">Add New Comment to <%=campground.name%></h1>
    <div style="max-width:350px;margin:25px auto;">
        <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-default btn-lg btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds/<%=campground._id%>">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>